<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0.0" method="upgrade" overwrite="true">
    <name>Routes</name>
    <identifier>com:routes</identifier>
    <author>Joep van der Heijden</author>
    <creationDate>July 2013</creationDate>
    <copyright>Copyright (C) 2013 Moyo Web Architects and Contributors. (http://www.moyoweb.nl)</copyright>
    <license>http://www.gnu.org/licenses/gpl.html GNU/GPL v3</license>
    <authorEmail>joep.van.der.heijden@moyoweb.nl</authorEmail>
    <authorUrl>www.moyoweb.nl</authorUrl>
    <version>2.0.9</version>
    <description>Routes</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">install/install.sql</file>
        </sql>
    </install>

    <administration>
        <files folder="administrator/components/com_routes">
            <file>dispatcher.php</file>
            <file>routes.php</file>

            <folder>databases</folder>
            <folder>install</folder>
            <folder>language</folder>
            <folder>views</folder>
        </files>

        <languages folder="administrator/components/com_routes">
            <language tag="en-GB">language/en-GB/en-GB.com_routes.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_routes.sys.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_routes.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_routes.sys.ini</language>
        </languages>

        <menu>COM_ROUTES</menu>
    </administration>
</extension>
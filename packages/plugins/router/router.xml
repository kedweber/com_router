    <version>3.0.1</version>
    <description>Router</description>

    <files>
        <file plugin="router">router.php</file>
    </files>

    <config>
        <fields name="params">
            <fieldset
                name="cache"
                label="ROUTER_PLG_FIELDSET_CACHE_LABEL">
                <field
                    name="cache"
                    type="radio"
                    label="ROUTER_PLG_FIELD_CACHE_LABEL"
                    description="ROUTER_PLG_FIELD_CACHE_DESCRIPTION"
                    default="0">
                    <option value="0">NO</option>
                    <option value="1">YES</option>
                </field>
            </fieldset>
        </fields>
    </config>
